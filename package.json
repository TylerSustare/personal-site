{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development next dev -p 8080",
    "build": "next build",
    "start": "next start",
    "xlint": "NODE_ENV=development eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "xcheck-types": "NODE_ENV=development tsc",
    "xprettier": "NODE_ENV=development prettier --ignore-path .gitignore --write \"**/*.+(js|json)\"",
    "xformat": "NODE_ENV=development npm run prettier -- --write",
    "xcheck-format": "NODE_ENV=development npm run prettier -- --list-different",
    "xvalidate": "NODE_ENV=development npm-run-all --parallel check-types check-format lint build",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run test",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.10.2",
    "apollo-server-micro": "^2.15.0",
    "next": "9.4.4",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@material-ui/icons": "^4.9.1",
    "@testing-library/react": "^10.3.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.38",
    "@types/test-listen": "^1.1.0",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.0",
    "graphql": "^15.1.0",
    "husky": "^4.2.5",
    "isomorphic-unfetch": "^3.0.0",
    "jest": "^26.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.11",
    "next-server": "^9.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "test-listen": "^1.1.0",
    "typescript": "^3.9.5"
  }
}
